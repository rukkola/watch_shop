<!DOCTYPE html>
<html lang="en">
  <head>

    <%= display_meta_tags title: @page_title, desc: @page_desc, keywords: @page_keywords %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <%= stylesheet_link_tag 'flexslider', media: 'all' %>
    <%= stylesheet_link_tag 'memenu',     media: 'all' %>
    <%= stylesheet_link_tag 'style',      media: 'all' %>
    <%= stylesheet_link_tag 'mystyle',    media: 'all' %>

    <meta name="viewport" content="width=devise-width, initial-scale=1"/>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
  </head>
  <body>

    <%= render 'include/main/top_header' %>

    <%= render 'include/main/notifications' %>

    <div class="logo">
      <%= link_to root_path do %>
        <h1>Luxury Watches</h1>
      <% end %>
    </div>

    <%= render 'include/main/button_header' %>

    <div class="content">
      <%= yield %>
    </div>

    <%= render 'include/main/footer' %>

    <%= javascript_include_tag "application" %>

  </body>
</html>
